---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Container from '../components/ui/Container.astro';
import NowSection from '../components/now/NowSection.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Now â€¢ ${SITE_TITLE}`} description="What I'm currently focused on" />
  </head>
  <body>
    <Header />
    <main class="pt-24 pb-16">
      <Container>
        <div class="space-y-16 animate-fade-up">
          <div>
            <h1 class="text-4xl font-bold text-white">Now</h1>
            <p class="mt-4 text-white/60">
              Last updated January 2025 from North Carolina
            </p>
          </div>

          <NowSection
            title="Current Focus"
            items={[
              "Building distributed checkout systems at New Balance",
              "Optimizing digital checkout flows to boost conversion rates",
              "Developing real-time monitoring solutions using Splunk"
            ]}
          />

          <NowSection
            title="Learning"
            items={[
              "Deep diving into Rust for systems programming",
              "Studying distributed systems design patterns",
              "Reading 'Designing Data-Intensive Applications' by Martin Kleppmann"
            ]}
          />

          <NowSection
            title="Building"
            items={[
              "Open-source monitor tool (50% complete)",
              "Personal knowledge base in Obsidian and Quip",
              "Contributing to various OSS projects"
            ]}
          />

          <NowSection
            title="Life"
            items={[
              "Training for spring half marathon",
              "Diving into St. Louis' vibrant startup ecosystem",
              "Exploring mechanical keyboards"
            ]}
          />

        </div>
      </Container>
    </main>
  </body>
</html>