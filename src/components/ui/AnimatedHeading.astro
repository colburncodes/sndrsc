---
interface Props {
  text: string;
}

const { text } = Astro.props;

// Split text into lines
const lines = text.split('<br>');
---

<h1 class="text-4xl md:text-6xl font-bold text-white leading-tight">
  {lines.map((line, i) => (
    <span 
      class="block opacity-0 translate-y-8" 
      style={`animation: slide-up 0.8s ease-out forwards ${i * 0.2}s`}
    >
      {line}
    </span>
  ))}
</h1>

<style>
  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(2rem);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>