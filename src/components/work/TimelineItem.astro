---
interface Props {
  title: string;
  company: string;
  period: {
    start: string;
    end: string;
  };
  description: string;
  highlights: string[];
  technologies: string[];
}

const { title, company, period, description, highlights, technologies } = Astro.props;
---

<div class="group py-8 first:pt-0 last:pb-0">
  <div class="flex flex-col gap-1">
    <div class="flex items-baseline justify-between">
      <h3 class="text-lg font-medium text-white/90">
        <span>{title}</span>
        <span class="text-white/30">•</span>
        <span class="font-semibold">{company}</span>
      </h3>
      <span class="font-mono text-sm text-white/30">{period.start} - {period.end}</span>
    </div>
    
    <p class="text-white/60 mt-2">{description}</p>
    
    <ul class="mt-4 space-y-2">
      {highlights.map(highlight => (
        <li class="text-white/80 flex items-baseline gap-2">
          <span class="text-white/20">•</span>
          {highlight}
        </li>
      ))}
    </ul>

    <div class="flex flex-wrap gap-2 mt-4">
      {technologies.map(tech => (
        <span class="px-2 py-1 bg-white/5 rounded text-xs text-white/60">
          {tech}
        </span>
      ))}
    </div>
  </div>
</div>